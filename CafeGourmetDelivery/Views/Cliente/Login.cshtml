@{
    ViewBag.Title = "Login";
}

<!-- Container principal para centralizar o conteúdo -->
<div class="login-background d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-5" style="width: 100%; max-width: 400px; border-radius: 15px; background-color: #f4f1eb;">
        <h2 class="text-center mb-4 text-brown" style="font-weight: bold;">Entrar</h2>

        <!-- Formulário de Login -->
        <form method="post" action="@Url.Action("Login", "Cliente")">
            <div class="form-group">
                <label for="email" class="text-brown">Email:</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="background-color: #e0dcd5; border: none;">
                            <i class="fas fa-envelope"></i>
                        </span>
                    </div>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu email" required style="border: 1px solid #e0dcd5; border-left: none;">
                </div>
            </div>

            <div class="form-group mt-3">
                <label for="senha" class="text-brown">Senha:</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" style="background-color: #e0dcd5; border: none;">
                            <i class="fas fa-lock"></i>
                        </span>
                    </div>
                    <input type="password" class="form-control" id="senha" name="senha" placeholder="Digite sua senha" required style="border: 1px solid #e0dcd5; border-left: none;">
                </div>
            </div>

            <!-- Botão de Login -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg w-100" style="background-color: #6f4e37; border: none;">Entrar</button>
            </div>
        </form>

        <!-- Link para cadastro -->
        <div class="text-center mt-4">
            <p class="text-brown">Não tem uma conta? <a href="@Url.Action("Cadastrar", "Cliente")" class="text-primary">Cadastre-se</a></p>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/Content/Site.css" />

