@{
    ViewBag.Title = "Confirmação de Pedido";
}

<!-- Seção de Confirmação -->
<div class="container py-5">
    <div class="confirmacao-section card p-5 text-center">
        <h2 class="text-success mb-4" style="font-weight: bold;">Pedido Confirmado!</h2>

        <div class="imagem-destaque mb-4">
            <img src="~/Content/imagens/sucesso.png" class="img-fluid pedido-sucesso-img" alt="Pedido Confirmado" style="max-width: 150px;">
        </div>

        <!-- Mensagem de confirmação -->
        <p class="lead text-muted">@ViewBag.Mensagem</p>

        <!-- Exibir o valor total do pedido -->
        @if (ViewBag.PrecoTotal != null)
        {
            <p class="text-muted mb-4">
                Valor Total do Pedido: <strong>R$ @(ViewBag.PrecoTotal.ToString("0.00"))</strong>
            </p>
        }

        <!-- Exibir itens do pedido -->
        <div class="mb-4">
            <h4 class="text-brown mb-3">Itens do Pedido:</h4>
            <ul class="list-group">
                @foreach (var item in ViewBag.ItensPedido)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@item.NomeProduto</span>
                        <span>Quantidade: @item.Quantidade</span>
                        <span>Subtotal: R$ @(string.Format("{0:0.00}", item.Preco * item.Quantidade))</span>
                    </li>
                }
            </ul>
        </div>

        <p class="text-muted mb-4">
            Seu pedido está sendo preparado com carinho e será processado em breve.
        </p>

        <a href="@Url.Action("Menu", "Cafe")" class="btn btn-primary btn-lg px-5 py-3" style="background-color: #6f4e37; border: none;">Voltar ao Menu</a>
    </div>
</div>

<link rel="stylesheet" href="~/Content/Site.css" />
