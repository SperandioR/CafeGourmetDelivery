@{
    ViewBag.Title = "Pedido";
}

<!-- Seção de Confirmação de Pedido -->
<div class="container py-5">
    <div class="pedido-section card p-4">
        <h2 class="text-center mb-4">Confirmar Pedido</h2>

        <!-- Resumo do Produto -->
        <div class="card-body d-flex flex-column align-items-center">
            <!-- A imagem agora é obtida a partir do caminho passado via ViewBag -->
            <img src="@Url.Content(ViewBag.CaminhoImagem)" class="img-fluid rounded-circle mb-4 pedido-produto-imagem" alt="@ViewBag.NomeProduto" style="max-width: 150px;">
            <h4 class="card-title mb-3 text-brown">@ViewBag.NomeProduto</h4>
            <p class="card-text text-muted">Estamos animados em confirmar o seu pedido. Por favor, insira a quantidade desejada e confirme o pedido abaixo.</p>
        </div>

        <!-- Formulário de Confirmação -->
        <form action="@Url.Action("ConfirmarPedido", "Cafe")" method="post" class="pedido-form mt-3">
            <div class="form-group">
                <label for="quantidade" class="font-weight-bold">Quantidade:</label>
                <input type="number" class="form-control form-control-lg text-center mt-2" id="quantidade" name="quantidade" value="1" min="1" style="max-width: 100px; margin: 0 auto;">
            </div>

            <!-- Botão de Confirmação -->
            <div class="text-center mt-4">
                <input type="hidden" name="nomeProduto" value="@ViewBag.NomeProduto">
                <button type="submit" class="btn btn-success btn-lg px-5 py-3" style="background-color: #007b5e; border: none;">Confirmar Pedido</button>
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="~/Content/Site.css" />
