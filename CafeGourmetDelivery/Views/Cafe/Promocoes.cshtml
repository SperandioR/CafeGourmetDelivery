@{
    ViewBag.Title = "Promoções";
}

<div class="container py-5">
    <h2 class="text-center mb-5" style="font-weight: bold; font-size: 2.5rem; color: #6f4e37;">Promoções Especiais</h2>

    <div class="row">
        <!-- Exemplo de item em promoção -->
        <div class="col-md-4 text-center mb-4">
            <div class="card shadow-sm promo-card">
                <img src="~/Content/imagens/copodecafe.png" class="card-img-top" alt="Café Expresso em promoção">
                <div class="card-body">
                    <h4 class="card-title">Café Expresso</h4>
                    <p class="text-muted">De: <span class="text-decoration-line-through">R$10,00</span></p>
                    <p class="promo-price">Por: R$8,00</p>
                    <button class="btn btn-dark mt-2">Aproveitar Promoção</button>
                </div>
            </div>
        </div>

        <div class="col-md-4 text-center mb-4">
            <div class="card shadow-sm promo-card">
                <img src="~/Content/imagens/cafecomleite.png" class="card-img-top" alt="Café com Leite em promoção">
                <div class="card-body">
                    <h4 class="card-title">Café com Leite</h4>
                    <p class="text-muted">De: <span class="text-decoration-line-through">R$12,00</span></p>
                    <p class="promo-price">Por: R$10,00</p>
                    <button class="btn btn-dark mt-2">Aproveitar Promoção</button>
                </div>
            </div>
        </div>

        <div class="col-md-4 text-center mb-4">
            <div class="card shadow-sm promo-card">
                <img src="~/Content/imagens/cappuccino.png" class="card-img-top" alt="Cappuccino em promoção">
                <div class="card-body">
                    <h4 class="card-title">Cappuccino</h4>
                    <p class="text-muted">De: <span class="text-decoration-line-through">R$14,00</span></p>
                    <p class="promo-price">Por: R$11,00</p>
                    <button class="btn btn-dark mt-2">Aproveitar Promoção</button>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/Content/Site.css" />
