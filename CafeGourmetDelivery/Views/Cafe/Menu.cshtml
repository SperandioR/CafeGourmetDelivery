
@{
    ViewBag.Title = "Menu";
}

<!-- Seção do Menu -->
<div class="menu-section py-5" style="background-color: #f4f1eb;">
    <div class="container">
        <h2 class="text-center mb-5 text-brown" style="font-weight: bold; font-size: 2.5rem;">Nosso Menu</h2>

        <!-- Divisão de Produtos em Colunas -->
        <div class="row">
            <!-- Produto 1: Café Expresso -->
            <div class="col-md-4 text-center mb-4">
                <div class="menu-item">
                    <img src="~/Content/imagens/copodecafe.png" class="img-fluid rounded menu-img" alt="Café Expresso">
                    <h4 class="mt-3">Café Expresso</h4>
                    <p class="text-muted">Intenso, aromático e encorpado, para os amantes de café puro.</p>
                    <p class="menu-price"><strong>R$10,00</strong></p>
                    <button onclick="location.href='@Url.Action("AdicionarAoCarrinho", "Cafe", new { nomeProduto = "Café Expresso", caminhoImagem = "~/Content/imagens/copodecafe.png", preco = 10.00m, quantidade = 1 })'" class="btn btn-dark btn-lg mt-3">Peça Agora</button>
                </div>
            </div>

            <!-- Produto 2: Café Latte -->
            <div class="col-md-4 text-center mb-4">
                <div class="menu-item">
                    <img src="~/Content/imagens/cafecomleite.png" class="img-fluid rounded menu-img" alt="Café com Leite">
                    <h4 class="mt-3">Café Latte</h4>
                    <p class="text-muted">Café expresso e leite vaporizado em perfeita harmonia.</p>
                    <p class="menu-price"><strong>R$12,00</strong></p>
                    <button onclick="location.href='@Url.Action("AdicionarAoCarrinho", "Cafe", new { nomeProduto = "Café Latte", caminhoImagem = "~/Content/imagens/cafecomleite.png", preco = 12.00m, quantidade = 1 })'" class="btn btn-dark btn-lg mt-3">Peça Agora</button>
                </div>
            </div>

            <!-- Produto 3: Cappuccino -->
            <div class="col-md-4 text-center mb-4">
                <div class="menu-item">
                    <img src="~/Content/imagens/cappuccino.png" class="img-fluid rounded menu-img" alt="Cappuccino">
                    <h4 class="mt-3">Cappuccino</h4>
                    <p class="text-muted">Espuma cremosa e uma dose perfeita de expresso.</p>
                    <p class="menu-price"><strong>R$14,00</strong></p>
                    <button onclick="location.href='@Url.Action("AdicionarAoCarrinho", "Cafe", new { nomeProduto = "Cappuccino", caminhoImagem = "~/Content/imagens/cappuccino.png", preco = 14.00m, quantidade = 1 })'" class="btn btn-dark btn-lg mt-3">Peça Agora</button>
                </div>
            </div>

            <!-- Produto 4: Bolo de Cenoura -->
            <div class="col-md-4 text-center mb-4">
                <div class="menu-item">
                    <img src="~/Content/imagens/bolocenoura.jpg" class="img-fluid rounded menu-img" alt="Bolo de Cenoura">
                    <h4 class="mt-3">Bolo de Cenoura</h4>
                    <p class="text-muted">Delicioso bolo de cenoura com cobertura de chocolate.</p>
                    <p class="menu-price"><strong>R$8,00</strong></p>
                    <button onclick="location.href='@Url.Action("AdicionarAoCarrinho", "Cafe", new { nomeProduto = "Bolo de Cenoura", caminhoImagem = "~/Content/imagens/bolocenoura.jpg", preco = 8.00m, quantidade = 1 })'" class="btn btn-dark btn-lg mt-3">Peça Agora</button>
                </div>
            </div>

            <!-- Produto 5: Cookies de Chocolate -->
            <div class="col-md-4 text-center mb-4">
                <div class="menu-item">
                    <img src="~/Content/imagens/Cookies.png" class="img-fluid rounded menu-img" alt="Cookies de Chocolate">
                    <h4 class="mt-3">Cookies de Chocolate</h4>
                    <p class="text-muted">Crocante por fora, macio por dentro, com gotas de chocolate.</p>
                    <p class="menu-price"><strong>R$5,00</strong></p>
                    <button onclick="location.href='@Url.Action("AdicionarAoCarrinho", "Cafe", new { nomeProduto = "Cookies de Chocolate", caminhoImagem = "~/Content/imagens/Cookies.png", preco = 5.00m, quantidade = 1 })'" class="btn btn-dark btn-lg mt-3">Peça Agora</button>
                </div>
            </div>

            <!-- Produto 6: Croissant -->
            <div class="col-md-4 text-center mb-4">
                <div class="menu-item">
                    <img src="~/Content/imagens/croissant.png" class="img-fluid rounded menu-img" alt="Croissant">
                    <h4 class="mt-3">Croissant</h4>
                    <p class="text-muted">Croissant clássico, leve e folhado, perfeito para o café.</p>
                    <p class="menu-price"><strong>R$7,00</strong></p>
                    <button onclick="location.href='@Url.Action("AdicionarAoCarrinho", "Cafe", new { nomeProduto = "Croissant", caminhoImagem = "~/Content/imagens/croissant.png", preco = 7.00m, quantidade = 1 })'" class="btn btn-dark btn-lg mt-3">Peça Agora</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Link para o arquivo CSS externo-->
<link rel="stylesheet" href="~/Content/Site.css" />

